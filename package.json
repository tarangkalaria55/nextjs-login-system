{
  "name": "nextjs-login-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check --write",
    "format": "biome format --write",
    "typegen": "next typegen",
    "auth:generate": "npx @better-auth/cli@latest generate --config ./src/lib/auth/auth.ts --output ./src/drizzle/schema/auth-schema.ts --yes",
    "db:generate": "npx drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "npx drizzle-kit migrate --config ./drizzle.config.ts",
    "db:push": "npx drizzle-kit push --config ./drizzle.config.ts",
    "db:pull": "npx drizzle-kit pull --config ./drizzle.config.ts",
    "db:studio": "npx drizzle-kit studio --config ./drizzle.config.ts",
    "env:push": "npx dotenv-vault@latest push",
    "env:pull": "npx dotenv-vault@latest pull",
    "publish:iis": "ts-node ./publish-iis.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next/env": "^15.5.4",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.5.6",
    "@t3-oss/env-nextjs": "^0.13.8",
    "better-auth": "^1.3.27",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cobe": "^0.6.5",
    "drizzle-orm": "^0.44.6",
    "lucide-react": "^0.545.0",
    "motion": "^12.23.24",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.64.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.5",
    "fs-extra": "^11.3.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
